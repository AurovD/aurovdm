                            .progress-bar.position-relative.rounded.darkblue(role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:50%")
                                span.text-white 50%
            .col-md-6.mb-3.animate-box.animated.left.ad-2
                .progress-wrap
                    .h3 Photoshop
                        .progress
                            .progress-bar.position-relative.rounded.darkblue(role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width:75%")
