extends layout

block content
    .container-fluid.col-md-10.p-0.bg-white.position-relative
        .parallelogram.m-5.text-white
            p.projectTitle.h2 DESIGN
        .row.m-3.p-4.d-flex.justify-content-center
            .card.card-project.mb-4
                #proj1.carousel.slide(data-ride="carousel").card-img-top
                    .carousel-inner
                        .carousel-item.active
                            img(src="./img/jiuce.png" alt="PortfolioProject1").d-block.w-100.cert-img
                .card-body
                    h5.card-title.h3 Лэндинг
                    p.card-text Landing page корзины с фруктами.
                ul.list-group.list-group-flush
                    li.list-group-item
